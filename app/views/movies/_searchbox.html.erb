<%= form_with url: "/search", method: :get, :html => { :class=>"w-full bg-white rounded-[30px] h-[46px] flex items-center justify-between font-ssp" } do |form| %>
  <%= form.text_field :query, placeholder: "Search...", :class => "border-none w-full text-[1.1em] ml-[20px] font-ssp" %>
  <%= form.submit "Search", :class => "h-[46px] py-[10px] px-[26px] border-none font-semibold rounded-[30px] text-white bg-gradient_search" %>
<% end %>