<div>
  <div class="w-[90%] aspect-[9/13] mx-auto relative rounded-2xl overflow-hidden">
    <% if movie["poster_path"].present? %>
      <img class="w-full" src="https://image.tmdb.org/t/p/w220_and_h330_face/<%= movie["poster_path"] %>" alt="">
    <% else %>
      <div class="w-full h-full bg-gray-300 flex items-center justify-center">
        <img class="w-[40%]" src="https://www.themoviedb.org/assets/2/v4/glyphicons/basic/glyphicons-basic-38-picture-grey-c2ebdbb057f2a7614185931650f8cee23fa137b93812ccb132b9df511df1cfac.svg" alt="">
      </div>
    <% end %>
  </div>
  <div class="pt-[10px]">
    <h2 class='text-[1.2em] m-0 w-full font-semibold font-ssp'>
      <%= movie["title"] %>
    </h2>
    <p class="text-[rgba(0,0,0,.6)] text-[1.1em] font-ssp">
      <%= movie["release_date"] %>
    </p>
  </div>
</div>